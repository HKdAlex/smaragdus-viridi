{
  "name": "crystallique",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:force": "next build",
    "build:with-validation": "npm run validate-images && next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "validate-docs": "node scripts/validate-docs.js",
    "check-doc-dependencies": "node scripts/check-doc-dependencies.js",
    "docs:check": "npm run validate-docs && npm run check-doc-dependencies",
    "docs:impact": "node scripts/check-doc-dependencies.js --impact=",
    "docs:full-check": "npm run docs:check && echo '✅ All documentation checks passed!'",
    "prepare": "husky install",
    "type-governance": "node scripts/check-type-governance.js",
    "check-type-duplicates": "grep -r \"export type GemstoneType\\|export type GemColor\\|export type GemCut\" src/ docs/ .cursor/ --exclude-dir=node_modules || echo '✅ No type duplications found'",
    "lint-types": "npm run lint && npm run type-governance",
    "pre-commit": "npm run lint-types && npm run type-check",
    "validate-types": "npm run check-type-duplicates && npm run type-check && echo '✅ Type system is clean!'",
    "validate-images": "node scripts/validate-images.js",
    "validate-images:fix": "node scripts/validate-images.js --fix",
    "assign-smart-images": "node scripts/smart-image-assignment.js",
    "refresh-gemstone-images": "node scripts/refresh-gemstone-images.js",
    "i18n:validate": "node scripts/validate-translations.mjs",
    "i18n:fix": "node scripts/fix-translations.mjs fix",
    "i18n:clean": "node scripts/fix-translations.mjs clean",
    "i18n:add": "node scripts/fix-translations.mjs add",
    "i18n:report": "node scripts/fix-translations.mjs report",
    "i18n:scan": "node scripts/scan-hardcoded-strings.mjs",
    "i18n:fix-hardcoded": "node scripts/fix-hardcoded-strings.mjs",
    "i18n:audit": "npm run i18n:validate && npm run i18n:scan",
    "types:generate": "npx supabase gen types typescript --project-id dpqapyojcdtrjwuhybky --schema public > src/shared/types/database.ts",
    "prebuild:validate": "npm run validate-images",
    "quality-check": "npm run type-check && npm run lint && npm run validate-images && npm run check-type-governance"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@heroicons/react": "^2.2.0",
    "@hookform/resolvers": "^3.3.4",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.5.1",
    "@supabase/supabase-js": "^2.55.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tanstack/react-query": "^5.90.3",
    "@tanstack/react-query-devtools": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "heic-convert": "^2.1.0",
    "lucide-react": "^0.439.0",
    "next": "15.1.8",
    "next-intl": "^4.3.5",
    "node-fetch": "^3.3.2",
    "openai": "^5.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.53.0",
    "resend": "^6.2.0",
    "sharp": "^0.34.2",
    "tailwind-merge": "^2.6.0",
    "three": "^0.169.0",
    "vercel": "^48.7.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@types/node": "^20",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/three": "^0.169.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^8",
    "eslint-config-next": "15.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "typescript-eslint": "^8.34.1",
    "vitest": "^2.1.1"
  }
}
